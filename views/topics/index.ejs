<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/topics/index.css">
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Lalezar&family=Londrina+Shadow&display=swap" rel="stylesheet">
<%- include('../partials/nav') %>

<section>
  <h1>The FLYERS CLUB</h1>
  <% if (user) { %>
    <h2>Add a Topic!</h2>
    <form action="/topics" method="POST">
      <label>
        Topic: 
        <input type="text" name="text" autocomplete="off">
      </label>
      <button type="submit">Add Topic</button>
    </form>
  <% } %>
  <h2>All Topics!</h2>
	<ul>
  <% topics.forEach(topic => { %>
    <li>
      <a href="/topics/<%= topic._id %>"><%= topic.text %></a> 
    </li>
  <% }) %>
  </ul>
</section>


<%- include('../partials/footer') %>