<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/profiles/edit.css">
<%- include('../partials/nav') %>

<main>
  <div>
    <img
      class="profile-avatar"
      src="<%= profile.avatar %>" 
      alt="<%= profile.name %>'s avatar"
    >
  </div>
  <%# isSelf replaces profile._id.equals(user.profile._id) %> 
  <% if (isSelf){ %>
    <h1><em>"You Have Flight Control..."</em></h1>
  <% } else { %>
    <h1>It's <%= profile.name %>'s profile!</h1>
  <% }%> 
  
  <% if (isSelf) { %>
    <h2>Edit plane!</h2>
    <form action="/profiles/<%= profile._id %>/planes/<%= plane._id %>?_method=PUT" method="POST">
      <label>
        Brand:
        <input value="<%= plane.brand %>" type="text" name="brand" autocomplete="off">
      </label>
      <label>
        Model:
        <input value="<%= plane.model %>" type="text" name="model" autocomplete="off">
      </label>
      <label>
        Color:
        <input value="<%= plane.color %>" type="text" name="color" autocomplete="off">
      </label>
      <button type="submit">Submit</button>
    </form>
  <% } %>

</main> 

<%- include('../partials/footer') %>
